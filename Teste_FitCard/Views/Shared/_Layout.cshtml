<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FitCart_Teste by Iuris Vidal</title>


    @Styles.Render("~/Content/bundle")
    @Scripts.Render("~/Scripts/bundle")
    
    <script src="https://kit.fontawesome.com/8188cb27f9.js" crossorigin="anonymous"></script>


</head>
<body style="padding-top: 5rem;">

    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <a class="navbar-brand" href="/Home">Fit-Card</a>

        <button class="navbar-toggler" type="button"  data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index","Home")">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Estabelecimento")"> Estabelecimento</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Cadastro
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("AddOrUpdate","Estabelecimento",new{id=""})">Estabelecimento</a>
                        <a class="dropdown-item" href="@Url.Action("Index","Categoria")">Categorias</a>
                        <div class="dropdown-divider"></div>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="https://github.com/iurividal/Teste_FitCard"> GitHub</a>
                </li>

            </ul>
        </div>

    </nav>

    <main role="main" class="container">
        @RenderBody()
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - FitCart_Teste by Iuris Vidal</p>
        </footer>
    </main>

</body>
</html>
